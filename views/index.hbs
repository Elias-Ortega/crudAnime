<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Animacion Japonesa</title>
</head>

<body>
    <nav class="navbar bg-body-tertiary">

        <div class="container-fluid" id="logo">
            <div class="texto"><b>Animacion Japonesa</b></a>
            </div>
    </nav>
    <div class="container my-1">
        <div class="row">
            <div class="col-3">
                <h4>Ingresa tu nuevo anime</h4>
                <form action="/animes" method="POST">

                    <div class="mb-3">
                        <label for="txtNombre" class="form-label">Nombre</label>
                        <input type="text" name="nombre" class="form-control" id="txtNombre"
                            placeholder="Ingresa el nombre del anime">
                    </div>
                    <div class="mb-3">
                        <label for="txtGenero" class="form-label">Género</label>
                        <input type="text" name="genero" class="form-control" id="txtGenero"
                            placeholder="Ingresa el género">
                    </div>
                    <div class="mb-3">
                        <label for="txtAnual" class="form-label">Año</label>
                        <input type="text" name="año" class="form-control" id="txtAnual" placeholder="Ingresa el año">
                    </div>
                    <div class="mb-3">
                        <label for="txtAutor" class="form-label">Autor</label>
                        <input type="text" name="autor" class="form-control" id="txtAutor"
                            placeholder="Ingresa el autor del anime">
                    </div>

                    <button type="submit" class="btn btn-primary text-center">Insertar</button>
                </form>
            </div>
                <!--> Listar animes  -->
            <div class="col-5">
                <h4 class="text-center">Listado de Animes</h4>
                <table class="table">

                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Género</th>
                            <th scope="col">Año</th>
                            <th scope="col">Autor</th>
                            <th scope="col">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each animes}}
                        <tr>
                            <td>{{@key}}</td>
                            <td>{{this.nombre}}</td>
                            <td>{{this.genero}}</td>
                            <td>{{this.año}}</td>
                            <td>{{this.autor}}</td>
                            <td>
                                <a href="/eliminar/{{@key}}"><button class="btn btn-danger borrar">Eliminar</button></a>
                                <a href="/actualizar/{{@key}}"><button class="btn btn-primary">Actualizar</button></a>

                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="col-4">
                <!-- Formulario para buscar por ID -->
                <form action="/buscar/id" method="POST">
                    <input type="text" class="my-3" placeholder="Ingresa ID Del Anime" name="id">
                    <button type="submit">Buscar por ID</button>
                </form>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Género</th>
                            <th scope="col">Año</th>
                            <th scope="col">Autor</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each animesPorId}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.nombre}}</td>
                            <td>{{this.genero}}</td>
                            <td>{{this.año}}</td>
                            <td>{{this.autor}}</td>
                        </tr>
                        {{/each}}


                    </tbody>
                </table>

                <!-- Formulario para buscar por nombre -->
                <form action="/buscar/nombre" class="my-3" method="POST">
                    <input type="text" placeholder="Nombre Del Anime" name="nombre">
                    <button type="submit">Buscar por Nombre</button>
                </form>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Género</th>
                            <th scope="col">Año</th>
                            <th scope="col">Autor</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each animesPorNombre}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.nombre}}</td>
                            <td>{{this.genero}}</td>
                            <td>{{this.año}}</td>
                            <td>{{this.autor}}</td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
        integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
        crossorigin="anonymous"></script>
    <script src="../js/script.js"></script>
</body>

</html>